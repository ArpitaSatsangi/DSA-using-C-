#include<iostream>
using namespace std;


int main() {

    int a = 4;
    int b = 6;

    cout<<" a&b " << (a&b) << endl; //bitwise AND =4
    cout<<" a|b " << (a|b) << endl; //bitwise OR =6
    cout<<" ~a " << ~a << endl; //bitwise NOT =-5
    cout<<" a^b " << (a^b) << endl; //bitwise XOR =2

    cout<< (17>>1)<<endl; //right shift - divide =8
    cout<< (17>>2) <<endl; //right shift - divide =4
    cout<< (19<<1) <<endl; //left shift - multiplication =38
    cout<< (21<<2) <<endl; //left shift - multiplication =84

    int i = 7;

    cout<< (++i) <<endl;
    // 8
    cout<< (i++) <<endl;
    // 8 , i = 9
    cout<< (i--) <<endl;
    //9 , i = 8
    cout<< (--i) <<endl;
    // 7, i =7
    return 0;
}
